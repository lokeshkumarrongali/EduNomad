<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F7FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ðŸŸ¦ Course Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/courseTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Python Basics"
                    android:textColor="@color/primaryColor"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/courseInstructorText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¨â€ðŸ« Instructor: John Doe"
                    android:textSize="15sp"
                    android:textColor="#555"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/courseLevelText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“˜ Level: Beginner"
                    android:textSize="15sp"
                    android:textColor="#555"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/courseDurationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â± Duration: 6 weeks"
                    android:textSize="15sp"
                    android:textColor="#555"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸŸ¨ Syllabus Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Syllabus"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primaryColor"
            android:layout_marginBottom="8dp" />

        <!-- ðŸŸ¢ Syllabus Topic Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Checkbox -->
                <CheckBox
                    android:id="@+id/completedCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:buttonTint="@color/primaryColor" />

                <!-- Topic Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/syllabusTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Introduction to Python"
                        android:textColor="#111"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="10dp" />

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/watchVideoButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â–¶Watch"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            app:cornerRadius="10dp"
                            app:backgroundTint="@color/primaryColor"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/downloadPdfButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“„PDF"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            app:cornerRadius="10dp"
                            app:backgroundTint="#2196F3"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/takeQuizButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ§©Quiz"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            app:cornerRadius="10dp"
                            app:backgroundTint="#FF9800" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
